<h1>Answer Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Yes</th>
      <th>No</th>
      <th>Unsure</th>
      <th>Add Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><label class="form-check-label">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        </label></td>
        <td><label class="form-check-label">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        </label></td>
        <td><label class="form-check-label">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        </label></td>
        <td><input type="text" class="form-control" id="comment" aria-describedby="comment" placeholder="Add a comment (optional)"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="actions">
  <button type="submit" class="btn btn-primary">Submit</button>
</div>

