<h1>Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Yes</th>
      <th>No</th>
      <th>Unsure</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.yes %></td>
        <td><%= question.no %></td>
        <td><%= question.unsure %></td>
        <td><%= question.comments %></td>
        <td><%= link_to 'Show', question %></td>
        <% if current_user.id == question.user_id %>
          <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
