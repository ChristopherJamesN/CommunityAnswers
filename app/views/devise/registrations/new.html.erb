<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password (6 characters minimum)" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>
  </div>

  <br>
  <p>Optional demographic information, all information is anonymized, and is used only for users informational purposes.</p>

  <div class="form-group">
    <%= f.number_field :age, autocomplete: "off", class: "form-control", placeholder: "Add age (optional)", min: 1, max: 125 %>
  </div>

  <div class="form-group">
    <select class="form-control" name="user[sex]">
      <option value="None">Prefer not to say</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
    </select>
  </div>

  <%= f.number_field :points, value: 0, hidden: true %>

  <div class="actions">
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </div>
<% end %>
